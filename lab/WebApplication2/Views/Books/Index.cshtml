@model IEnumerable<WebApplication2.Models.Book>
@using WebApplication2.Models;
@{
    ViewData["Title"] = "Index";
}

<h2>@Html.Butify("Index")</h2>

<p>
    <a href="/books/create" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th>
                Publisher
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Publisher
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
